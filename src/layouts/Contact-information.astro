---
import { CheckBoxComponent, InputWithIcon, SelectWithIcon, SimpleButton } from "../components";
import { EmailIcon, PhoneIcon, AccountIcon, HomeIcon, CityIcon, PostalIcon  } from "../components/icons";
import { contryList } from "../helpers/contries";
---
<form>
    <section>
        <h3>Contact information</h3>

        <InputWithIcon 
            label="E-mail" 
            name="email" 
            placeholder="Enter your email..." 
            required={true}>
            <EmailIcon />
        </InputWithIcon>

        <InputWithIcon 
            label="Phone" 
            name="phone" 
            placeholder="Enter your phone..." 
            required={true}>
            <PhoneIcon />
        </InputWithIcon>
    </section>

    <section>
        <h3>Shipping address</h3>

        <InputWithIcon            
            label="Full name" 
            name="fullname" 
            placeholder="Your name.." 
            required={true}>
            <AccountIcon />
        </InputWithIcon>

        <InputWithIcon 
            label="Address" 
            name="address" 
            placeholder="Your address.." 
            required={true}>
            <HomeIcon />
        </InputWithIcon>

        <InputWithIcon 
            label="City" 
            name="city" 
            placeholder="Your city.." 
            required={true}>
            <CityIcon />
        </InputWithIcon>

        <SelectWithIcon 
            label="Country" 
            name="country" 
            placeholder="Your country.."   
            required={true}
            list={contryList}>
            <CityIcon />
        </SelectWithIcon>

        <InputWithIcon 
            label="Postal code" 
            name="postalcode" 
            placeholder="Your postal code.." 
            required={true}>
            <PostalIcon />
        </InputWithIcon>
    </section>

    <section>
        <CheckBoxComponent required={true}>Save this information for next time</CheckBoxComponent>
        <SimpleButton>Continue</SimpleButton>
    </section>
</form>
<style>
    form section:nth-child(1){
        margin-bottom: 45px;
    }
    h3{
        margin-bottom: 12px;
    }
</style>